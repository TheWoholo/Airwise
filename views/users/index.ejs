<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f3f3f3;
            transition: background-color 0.3s, color 0.3s;
        }
        .container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s;
        }
        h1 {
            margin-top: 0;
            color: #333;
            text-align: center;
        }
        form {
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #666;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }
        button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        button[type="submit"]:hover {
            background-color: #45a049;
        }
        a {
            display: block;
            text-align: center;
            color: #4CAF50;
            text-decoration: none;
        }
        a:hover {
            color: #45a049;
        }
        /* Dark Mode Styles */
        body.dark-mode {
            background-color: #111;
            color: #fff;
        }
        .dark-mode .container {
            background-color: #333;
            box-shadow: 0 2px 5px rgba(255, 255, 255, 0.1);
        }
        .dark-mode h1,
        .dark-mode label {
            color: #ccc;
        }
        .dark-mode input[type="text"],
        .dark-mode input[type="password"] {
            border: 1px solid #888;
            color: #fff;
            background-color: #333;
        }
        .dark-mode button[type="submit"] {
            background-color: #4CAF50;
        }
        .dark-mode button[type="submit"]:hover {
            background-color: #45a049;
        }
        .dark-mode a {
            color: #4CAF50;
        }
        .dark-mode a:hover {
            color: #45a049;
        }
        .mode-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            background: none;
            border: none;
            color: #4CAF50;
            font-size: 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <button class="mode-toggle" onclick="toggleMode()">ðŸŒž</button>
    <script>
        // Function to toggle dark mode
        function toggleMode() {
            const body = document.body;
            const modeButton = document.querySelector('.mode-toggle');
            // Check if dark mode is enabled
            const isDarkMode = body.classList.contains('dark-mode');

            if (isDarkMode) {
                // Disable dark mode
                body.classList.remove('dark-mode');
                modeButton.innerText = 'ðŸŒž';
                // Store mode preference in localStorage
                localStorage.setItem('mode', 'light');
            } else {
                // Enable dark mode
                body.classList.add('dark-mode');
                modeButton.innerText = 'ðŸŒ™';
                // Store mode preference in localStorage
                localStorage.setItem('mode', 'dark');
            }
        }

        // Function to load stored mode preference
        function loadMode() {
            const mode = localStorage.getItem('mode');
            if (mode === 'dark') {
                document.body.classList.add('dark-mode');
                document.querySelector('.mode-toggle').innerText = 'ðŸŒ™';
            }
        }

        // Call loadMode function when the page loads
        document.addEventListener('DOMContentLoaded', loadMode);
    </script>
    <div class="container">
        <h1>Login</h1>
        <form action="/users" method="post">
            <div>
                <label for="name">Username</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
        </form>
        <a href="/users/new">Register</a>
    </div>

    <script>
        function toggleMode() {
            const body = document.body;
            const modeButton = document.querySelector('.mode-toggle');

            if (body.classList.contains('dark-mode')) {
                body.classList.remove('dark-mode');
                modeButton.innerText = 'ðŸŒž';
            } else {
                body.classList.add('dark-mode');
                modeButton.innerText = 'ðŸŒ™';
            }
        }
    </script>
</body>
</html>



